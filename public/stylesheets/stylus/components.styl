/**
 * Labels
 */
.label
  float: left
  color: colour-main-light
  background: colour-compl-dark
  padding: 0 5px 3px
  margin: 0 5px 5px 0
  border-radius: 2px

/**
 * Tabs
 */
.tabs
  display: inline-flex
  flex-direction: row
  justify-content: flex-start

  /** Media links (icons) */
  a
    padding: 5px 10px
    color: colour-main-light

  /** Singular tabs */
  li
    background: colour-compl-dark
    &.active
      background: colour-main-dark
    &:not(.active):hover a
      color: colour-main-dark


