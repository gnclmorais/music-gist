html,
body
  height: 100%

body
  margin: 0
  font: 18px 'Source Sans Pro', Helvetica, Arial, sans-serif
  font-weight: 300
  color: colour-main-dark
  background: colour-main-dark
  // Flex:
  display: flex;
  flex-direction: column;
  align-items: stretch;

header
  padding-top: 2em

  h1
    background-position: left

a
  color: colour-compl-dark
  &.fa
    text-decoration: none
  &:hover
    color: colour-main-dark

iframe
  border: none

ul
  list-style-type: none
  margin: 0
  padding: 0

textarea,
input
  outline: none


/**
 * Normaliser replacements
 */
h1,
h2
  margin-top: 0

/**
 * Utils
 */
.framer
  width: 800px
  margin: 0 auto

.content
  background: colour-main-light
  display: flex
  flex-grow: 2
  flex-direction: column
