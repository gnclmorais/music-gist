/**
 * Profile page of an artist/band.
 */

/** Header */
header
  /** Title bar */
  h1
    float: left

  /** Search bar */
  .form-search
    float: right

/** Contet */
.profile
  height: 100%
  // Flex settings:
  display: flex
  flex-flow: row nowrap
  justify-content: space-around
  align-items: stretch
  align-content: center

  /** Artist/badn name */
  h2
    /** Single artist or band - icon */
    i
      color: colour-compl-dark
      margin-left: 0.3em
      font-size: 0.75em

  /**
   * Main sections: media & info.
   */
  .section-media,
  .section-info
    flex-grow: 1

  .section-media
    padding-right: 10px

  .section-info
    padding: 10px
    flex-shrink: 2

  /** Main title */
  .main-title
    .fa-user,
    .fa-users
      font-size: 75%
      padding-left: 10px
      opacity: .75
      color: colour-compl-dark

  /** Country of origin */
  .origin
    img
      position: relative
      top: 2px
      margin-right: 5px

  /**
   * Subsections.
   */
  .cover
    width: 100%
    float: left
    margin: 0 1em 1em 0

  .tags
    overflow: hidden

  .links
    text-transform: capitalize

    ul
      -webkit-column-gap: 10px
      -webkit-column-count: 3
      -moz-column-gap: 10px
      -moz-column-count: 3
      column-gap: 10px
      column-count: 3

    li
      list-style-type: none

    i
      width: 15px
      font-size: 75%
      text-align: center
      margin-right: 3px

  /**
   * Players
   */
  .players
    .soundcloud iframe
      width: 100%

  /**
   * Responsive YouTube videos as found on:
   * http://avexdesigns.com/responsive-youtube-embed/
   */
  .video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 30px
    height: 0
    overflow: hidden

    iframe,
    object,
    embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
