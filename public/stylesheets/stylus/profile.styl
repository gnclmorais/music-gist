/**
 * Profile page of an artist/band.
 */
.profile
  height: 100%
  width: 800px
  margin: 0 auto
  background: colour-main-light
  // Flex settings:
  display: flex
  flex-flow: row nowrap
  justify-content: space-around
  align-items: stretch
  align-content: center

  /**
   * Main sections: media & info.
   */
  .section-media,
  .section-info
    padding-top: 10px
    flex-grow: 1

  .section-media
    padding-right: 10px

  .section-info
    padding-left: 10px
    flex-shrink: 2

  /**
   * Subsections.
   */
  .cover
    width: 100%
    float: left
    margin: 0 1em 1em 0

  .tags
    overflow: hidden

  .links
    text-transform: capitalize

    li
      list-style-type: none

  /**
   * Players
   */
  .players
    .soundcloud iframe
      width: 100%

  /**
   * Responsive YouTube videos as found on:
   * http://avexdesigns.com/responsive-youtube-embed/
   */
  .video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 30px
    height: 0
    overflow: hidden

    iframe,
    object,
    embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
